<h1>Users</h1>

<% @users.each do |user| %>
  <% next if user == current_user %>
  <div class="user-info">
     Name: <%= user.name %><br>
     Email: <%= user.email %>
  </div>

  <% if @followees.include?(user) %>
    <%= button_to 'Unfollow', following_path(user.id), method: :delete %>
  <% else %>
    <div class="follow-button"><%= button_to 'Follow', followings_path(followee_id: user.id), method: :post%></div>
  <% end %>
  <br>
<% end %>
