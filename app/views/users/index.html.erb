<h1>Users</h1>

Following:<br>
<% @followees.each do |f| %>
  <%= f.name %><br>
<% end %><br>

<% @users.each do |user| %>
  <% next if user == current_user %>
  <div class="user-info">
     Name: <%= user.name %><br>
     Email: <%= user.email %>
  </div>

  <% if @followees.include?(user) %>
    <% following = Following.find_by(follower_id: current_user, followee_id: user.id) %>
    <%= button_to 'Unfollow', following_path(following.id), method: :delete %>
  <% else %>
    <%= button_to 'Follow', followings_path(followee_id: user.id), method: :post%>
  <% end %>
  <br>
<% end %>
