<!DOCTYPE html>
<html>
  <head>
    <title>WeTube</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
    <%= javascript_importmap_tags %>
  </head>

  <body>
    <%# Display sign-out button if some use is logged in %>
    <nav></nav>
    <header>
      <div class="logo-section">
        <div class="red-square">▶︎</div>
        <div class="text">WeTube</div>
      </div>
      <div class="search">
        <%= form_tag '/', method: :get do %>
          <%= text_field_tag :query, params[:query], placeholder: 'Search' %>
          <div class="search-button"><%= submit_tag '', src: asset_path('search-ic.svg'), type: 'image' %></div>
        <% end %>
      </div>
      <div class="user">
        <%= button_to image_tag(current_user.profile.profile_picture_path), new_profile_path, method: :get %>
      </div>
    </header>
    <main>
      <% if current_user %>
        <div class="login-section">
          <%= button_to 'Sign-out', destroy_session_path(current_user), method: :delete %>
          You are logged-in as: <%= current_user.name %>
        </div>
        <%= button_to 'Home', root_path, method: :get %>
        <%= button_to 'Users', users_path, method: :get %>

      <% end %>
      <%# Create a p for the flashes with apropriate class %>
      <% if flash[:notice] %>
        <p class='notice'> <%= flash[:notice] %></p>
      <% elsif flash[:alert] %>
        <p class='alert'> <%= flash[:alert] %></p>
      <% end %>
      <%= yield %>
    </main>
  </body>
</html>
