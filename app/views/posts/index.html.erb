<p style="color: green"><%= notice %></p>

<h1>Posts</h1>

<div id="posts">
  <% @posts.each do |post| %>
    <div class="post">
      <%= render post %>
      <p>
        <%= link_to "Show this post", post %>
        <%= form_with model: @like do |f| %>
          <%= f.hidden_field :user_id, value: current_user.id %>
          <%= f.hidden_field :post_id, value: post.id %>
          <%= f.submit '❤️' %>
        <% end %>
      </p>
    </div>
  <% end %>
</div>

<%= link_to "New post", new_post_path %>
