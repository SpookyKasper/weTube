<div id="<%= dom_id post %>">
  <strong>Author:</strong>
    <%= post.user.name%>
  <p>
    <strong>Title:</strong>
    <%= post.title %>
  </p>

  <p>
    <strong>Body:</strong>
    <%= post.body %>
  </p>

  <p>
    <strong>Comments:</strong><br>
    <% post.comments.each do |comment| %>
      <%= comment.user.name %> commented:<br>
      <%= comment.body %>
    <% end %>
  </p>
    <div class="likes">❤️ <%= post.likes.size%></div>
</div>
