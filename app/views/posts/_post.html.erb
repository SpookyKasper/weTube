<div id="<%= dom_id post %>">
  <strong>Author:</strong>
    <%= post.user.name %>
  <p>
    <strong>Title:</strong>
    <%= post.title %>
  </p>

  <p>
    <strong>Body:</strong>
    <%= post.body %>
  </p>

  <p>
    <strong>Comments:</strong><br>
    <% post.comments.each do |comment| %>
      <%= comment.user.name %> commented:<br>
      <%= comment.body %>
    <% end %>
  </p>

  <div class="likes">
    <% if like = post.likes.find { |like| like.user == current_user } %>
      <%= button_to '❤️', like_path(like.id), method: :delete %>
    <% else %>
      <%= button_to '🖤', likes_path(user_id: current_user.id, post_id: post.id), method: :post %>
    <% end %>
    <% num_likes = post.likes.size > 0 ? post.likes.size : nil %>
    <div class="num_likes"><%= num_likes %></div>
  </div>
</div>
