<div id="<%= dom_id post %>">
  <p>
    <strong>Title:</strong>
    <%= post.title %>
  </p>

  <p>
    <strong>Body:</strong>
    <%= post.body %>
  </p>

  <p>
    <strong>Comments:</strong><br>
    <% post.comments.each do |comment| %>
      <%= comment.user.name %> commented:<br>
      <%= comment.body %>
    <% end %>
  </p>

</div>
